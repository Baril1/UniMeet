{% extends 'base.html.twig' %}

{% block title %}Add New User - UniMeet{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">
            <i class="fas fa-user-plus text-purple-600 mr-3"></i>
            Add New User
        </h1>
        <p class="text-gray-600">Create a new UniMeet user account</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-2xl shadow-xl card-hover overflow-hidden">
        <div class="gradient-bg py-6 px-8">
            <h2 class="text-2xl font-bold text-white">User Information</h2>
        </div>
        
        <div class="p-8">
            {{ include('user/_form.html.twig') }}
        </div>
    </div>

    <!-- Back Button -->
    <div class="text-center mt-8">
        <a href="{{ path('app_user_index') }}" 
           class="inline-flex items-center space-x-2 text-gray-600 hover:text-purple-600 transition duration-300">
            <i class="fas fa-arrow-left"></i>
            <span>Back to user list</span>
        </a>
    </div>
</div>
{% endblock %}