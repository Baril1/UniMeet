<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" 
      onsubmit="return confirm('Are you sure you want to delete {{ user.name }}? This action cannot be undone.');"
      class="inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button type="submit" 
            class="flex items-center space-x-2 bg-red-500 hover:bg-red-600 text-white px-6 py-3 rounded-lg transition duration-300 transform hover:scale-105">
        <i class="fas fa-trash"></i>
        <span>Delete User</span>
    </button>
</form>