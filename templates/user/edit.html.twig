{% extends 'base.html.twig' %}

{% block title %}Edit User - UniMeet{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">
            <i class="fas fa-user-edit text-purple-600 mr-3"></i>
            Edit User
        </h1>
        <p class="text-gray-600">Update user information</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-2xl shadow-xl card-hover overflow-hidden">
        <div class="gradient-bg py-6 px-8">
            <h2 class="text-2xl font-bold text-white">Edit {{ user.name }}</h2>
        </div>
        
        <div class="p-8">
            {{ include('user/_form.html.twig', {'button_label': 'Update User'}) }}
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-6 mt-8">
        <a href="{{ path('app_user_index') }}" 
           class="flex items-center space-x-2 bg-gray-600 hover:bg-gray-700 text-white px-6 py-3 rounded-lg transition duration-300">
            <i class="fas fa-arrow-left"></i>
            <span>Back to List</span>
        </a>
        
        <div class="inline-block">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}