{% extends 'base.html.twig' %}

{% block title %}Meeting Room: {{ meeting.title }} - UniMeet{% endblock %}

{% block body %}
<div class="h-screen bg-gray-900 flex flex-col">
    <!-- Meeting Header -->
    <div class="bg-gray-800 text-white px-6 py-4">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
                <h1 class="text-xl font-semibold">{{ meeting.title }}</h1>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <i class="fas fa-circle mr-1 animate-pulse"></i>
                    Live
                </span>
            </div>
            <div class="flex items-center space-x-3">
                <span class="text-sm text-gray-300">
                    <i class="fas fa-users mr-1"></i>
                    {{ meeting.participants|length + 1 }} participants
                </span>
                <button class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition duration-300">
                    <i class="fas fa-phone-slash mr-2"></i>
                    Leave Meeting
                </button>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 flex">
        <!-- Video Grid -->
        <div class="flex-1 p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 h-full">
                <!-- Host Video -->
                <div class="bg-gray-800 rounded-lg relative aspect-video">
                    <div class="absolute inset-0 flex items-center justify-center">
                        <div class="text-center">
                            <div class="w-20 h-20 bg-purple-600 rounded-full flex items-center justify-center mx-auto mb-3">
                                <i class="fas fa-crown text-white text-2xl"></i>
                            </div>
                            <p class="text-white font-semibold">{{ meeting.host.name }}</p>
                            <p class="text-gray-400 text-sm">Host</p>
                        </div>
                    </div>
                    <div class="absolute bottom-3 left-3 bg-black bg-opacity-50 text-white px-2 py-1 rounded text-sm">
                        <i class="fas fa-microphone text-green-400 mr-1"></i>
                        <i class="fas fa-video text-green-400"></i>
                    </div>
                </div>

                <!-- Participants Videos -->
                {% for participant in meeting.participants %}
                    <div class="bg-gray-800 rounded-lg relative aspect-video">
                        <div class="absolute inset-0 flex items-center justify-center">
                            <div class="text-center">
                                <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-2">
                                    <i class="fas fa-user text-white text-xl"></i>
                                </div>
                                <p class="text-white font-medium">{{ participant.name }}</p>
                            </div>
                        </div>
                        <div class="absolute bottom-3 left-3 bg-black bg-opacity-50 text-white px-2 py-1 rounded text-sm">
                            <i class="fas fa-microphone text-green-400 mr-1"></i>
                            <i class="fas fa-video text-green-400"></i>
                        </div>
                    </div>
                {% endfor %}

                <!-- Empty slots for future participants -->
                {% for i in 1..(6 - (meeting.participants|length + 1)) %}
                    <div class="bg-gray-800 rounded-lg border-2 border-dashed border-gray-600 flex items-center justify-center aspect-video">
                        <div class="text-center text-gray-500">
                            <i class="fas fa-user-plus text-2xl mb-2"></i>
                            <p class="text-sm">Waiting for participant</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <!-- Sidebar -->
        <div class="w-80 bg-gray-800 border-l border-gray-700 flex flex-col">
            <!-- Chat Section -->
            <div class="flex-1 p-4">
                <h3 class="text-white font-semibold mb-4">Chat</h3>
                <div class="bg-gray-700 rounded-lg p-4 h-64 mb-4 overflow-y-auto">
                    <div class="space-y-3">
                        <div class="text-right">
                            <div class="bg-purple-600 text-white rounded-lg py-2 px-3 inline-block max-w-xs">
                                <p class="text-sm">Hello everyone!</p>
                            </div>
                            <p class="text-xs text-gray-400 mt-1">You - Just now</p>
                        </div>
                        <div>
                            <div class="bg-gray-600 text-white rounded-lg py-2 px-3 inline-block max-w-xs">
                                <p class="text-sm">Hi there! Ready to start.</p>
                            </div>
                            <p class="text-xs text-gray-400 mt-1">Participant - Just now</p>
                        </div>
                    </div>
                </div>
                <div class="flex space-x-2">
                    <input type="text" placeholder="Type a message..." 
                           class="flex-1 bg-gray-700 text-white rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500">
                    <button class="bg-purple-600 hover:bg-purple-700 text-white p-2 rounded-lg">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>

            <!-- Controls -->
            <div class="p-4 border-t border-gray-700">
                <div class="flex justify-center space-x-4">
                    <button class="w-12 h-12 bg-gray-700 hover:bg-gray-600 text-white rounded-full flex items-center justify-center transition duration-300">
                        <i class="fas fa-microphone text-green-400"></i>
                    </button>
                    <button class="w-12 h-12 bg-gray-700 hover:bg-gray-600 text-white rounded-full flex items-center justify-center transition duration-300">
                        <i class="fas fa-video text-green-400"></i>
                    </button>
                    <button class="w-12 h-12 bg-red-600 hover:bg-red-700 text-white rounded-full flex items-center justify-center transition duration-300">
                        <i class="fas fa-phone-slash"></i>
                    </button>
                    <button class="w-12 h-12 bg-gray-700 hover:bg-gray-600 text-white rounded-full flex items-center justify-center transition duration-300">
                        <i class="fas fa-cog"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Meeting Information Modal (hidden by default) -->
<div id="meetingInfo" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Meeting Information</h3>
        <div class="space-y-3">
            <div>
                <label class="text-sm font-medium text-gray-500">Meeting Title</label>
                <p class="text-sm text-gray-900">{{ meeting.title }}</p>
            </div>
            <div>
                <label class="text-sm font-medium text-gray-500">Host</label>
                <p class="text-sm text-gray-900">{{ meeting.host.name }}</p>
            </div>
            <div>
                <label class="text-sm font-medium text-gray-500">Duration</label>
                <p class="text-sm text-gray-900">{{ meeting.duration }} minutes</p>
            </div>
        </div>
        <div class="mt-6 flex justify-end">
            <button onclick="document.getElementById('meetingInfo').classList.add('hidden')" 
                    class="bg-purple-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-purple-700">
                Close
            </button>
        </div>
    </div>
</div>

<script>
// Simple meeting room functionality
document.addEventListener('DOMContentLoaded', function() {
    // Toggle meeting info
    document.querySelector('[onclick*="meetingInfo"]')?.addEventListener('click', function() {
        document.getElementById('meetingInfo').classList.toggle('hidden');
    });

    // Handle leave meeting
    document.querySelector('.bg-red-600').addEventListener('click', function() {
        if (confirm('Are you sure you want to leave the meeting?')) {
            window.location.href = "{{ path('app_meeting_index') }}";
        }
    });
});
</script>
{% endblock %}