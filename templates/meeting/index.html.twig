{% extends 'base.html.twig' %}

{% block title %}My Meetings - UniMeet{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="md:flex md:items-center md:justify-between mb-8">
        <div class="flex-1 min-w-0">
            <h1 class="text-3xl font-bold text-gray-900">
                <i class="fas fa-video text-purple-600 mr-3"></i>
                My Meetings
            </h1>
            <p class="text-gray-600 mt-2">Manage your scheduled and instant meetings</p>
        </div>
        <div class="mt-4 flex md:mt-0 md:ml-4 space-x-3">
            <a href="{{ path('app_meeting_new') }}" 
               class="btn-primary">
                <i class="fas fa-plus mr-2"></i>
                New Meeting
            </a>
        </div>
    </div>

    <!-- Meetings Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for meeting in meetings %}
            <div class="bg-white rounded-lg shadow-md border border-gray-200 hover:shadow-lg transition-shadow duration-300">
                <div class="p-6">
                    <!-- Meeting Header -->
                    <div class="flex items-start justify-between mb-4">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900">{{ meeting.title }}</h3>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                {% if meeting.type == 'instant' %}bg-red-100 text-red-800
                                {% else %}bg-blue-100 text-blue-800{% endif %}">
                                {{ meeting.type|title }}
                            </span>
                        </div>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                            {% if meeting.status == 'ongoing' %}bg-green-100 text-green-800
                            {% elseif meeting.status == 'scheduled' %}bg-yellow-100 text-yellow-800
                            {% else %}bg-gray-100 text-gray-800{% endif %}">
                            {{ meeting.status|title }}
                        </span>
                    </div>

                    <!-- Meeting Details -->
                    <div class="space-y-2 text-sm text-gray-600 mb-4">
                        {% if meeting.scheduledAt %}
                            <div class="flex items-center">
                                <i class="fas fa-clock mr-2 w-4"></i>
                                {{ meeting.scheduledAt|date('M j, Y g:i A') }}
                            </div>
                        {% endif %}
                        <div class="flex items-center">
                            <i class="fas fa-hourglass-half mr-2 w-4"></i>
                            {{ meeting.duration }} minutes
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-users mr-2 w-4"></i>
                            {{ meeting.participants|length }} participants
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex space-x-2">
                        {% if meeting.status == 'ongoing' or meeting.type == 'instant' %}
                            <a href="{{ path('app_meeting_room', {'id': meeting.id}) }}" 
                               class="flex-1 bg-green-600 text-white px-3 py-2 rounded text-sm font-medium hover:bg-green-700 text-center">
                                Join Meeting
                            </a>
                        {% elseif meeting.status == 'scheduled' %}
                            {% if meeting.host == app.user %}
                                <form method="post" action="{{ path('app_meeting_start', {'id': meeting.id}) }}" class="flex-1">
                                    <button type="submit" class="w-full bg-purple-600 text-white px-3 py-2 rounded text-sm font-medium hover:bg-purple-700">
                                        Start Meeting
                                    </button>
                                </form>
                            {% else %}
                                <form method="post" action="{{ path('app_meeting_join', {'id': meeting.id}) }}" class="flex-1">
                                    <button type="submit" class="w-full bg-blue-600 text-white px-3 py-2 rounded text-sm font-medium hover:bg-blue-700">
                                        Join Meeting
                                    </button>
                                </form>
                            {% endif %}
                        {% endif %}
                        
                        <a href="{{ path('app_meeting_show', {'id': meeting.id}) }}" 
                           class="bg-gray-200 text-gray-700 px-3 py-2 rounded text-sm font-medium hover:bg-gray-300">
                            <i class="fas fa-eye"></i>
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-span-full text-center py-12">
                <i class="fas fa-video text-gray-300 text-6xl mb-4"></i>
                <h3 class="text-lg font-medium text-gray-900">No meetings yet</h3>
                <p class="text-gray-500 mt-1">Create your first meeting to get started!</p>
                <a href="{{ path('app_meeting_new') }}" class="btn-primary mt-4">
                    <i class="fas fa-plus mr-2"></i>
                    Create Meeting
                </a>
            </div>
        {% endfor %}
    </div>
</div>

<style>
.btn-primary {
    @apply inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500;
}
</style>
{% endblock %}