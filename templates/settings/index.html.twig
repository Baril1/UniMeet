{% extends 'base.html.twig' %}

{% block title %}Settings - UniMeet{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto py-8">
    <!-- Header -->
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">
            <i class="fas fa-cog text-purple-600 mr-3"></i>
            Settings
        </h1>
        <p class="text-gray-600">Manage your account preferences and settings</p>
    </div>

    <!-- Settings Card -->
    <div class="bg-white rounded-2xl shadow-xl p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Account Settings -->
            <div class="space-y-6">
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Account Settings</h2>
                
                <div class="space-y-4">
                    <div class="p-4 border border-gray-200 rounded-lg">
                        <h3 class="font-semibold text-gray-800 mb-2">Profile Information</h3>
                        <p class="text-gray-600 text-sm mb-3">Update your account profile information</p>
                        <button class="text-purple-600 hover:text-purple-700 font-medium">
                            Edit Profile
                        </button>
                    </div>

                    <div class="p-4 border border-gray-200 rounded-lg">
                        <h3 class="font-semibold text-gray-800 mb-2">Change Password</h3>
                        <p class="text-gray-600 text-sm mb-3">Update your password regularly for security</p>
                        <button class="text-purple-600 hover:text-purple-700 font-medium">
                            Change Password
                        </button>
                    </div>
                </div>
            </div>

            <!-- Application Settings -->
            <div class="space-y-6">
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Preferences</h2>
                
                <div class="space-y-4">
                    <div class="p-4 border border-gray-200 rounded-lg">
                        <h3 class="font-semibold text-gray-800 mb-2">Notifications</h3>
                        <p class="text-gray-600 text-sm mb-3">Manage your email and push notifications</p>
                        <button class="text-purple-600 hover:text-purple-700 font-medium">
                            Configure
                        </button>
                    </div>

                    <div class="p-4 border border-gray-200 rounded-lg">
                        <h3 class="font-semibold text-gray-800 mb-2">Privacy</h3>
                        <p class="text-gray-600 text-sm mb-3">Control your privacy settings</p>
                        <button class="text-purple-600 hover:text-purple-700 font-medium">
                            Privacy Settings
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}