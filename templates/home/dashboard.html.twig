{% extends 'base.html.twig' %}

{% block title %}Dashboard - UniMeet{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="gradient-bg text-white">
    <div class="container mx-auto px-4 py-16">
        <div class="flex flex-col lg:flex-row items-center justify-between">
            <div class="lg:w-1/2 mb-12 lg:mb-0">
                <h1 class="text-4xl lg:text-5xl font-bold mb-4 leading-tight">
                    Welcome back, 
                    <span class="text-yellow-300">{{ app.user.name }}! ðŸ‘‹</span>
                </h1>
                <p class="text-xl mb-8 text-purple-100">
                    Ready to start your next video conference? Everything you need is right here.
                </p>
                <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-6">
                    <a href="{{ path('app_meeting_new') }}" class="inline-block">
                        <button class="bg-white text-purple-600 hover:bg-gray-100 px-8 py-4 rounded-lg font-semibold text-lg text-center transition duration-300 transform hover:scale-105">
                            <i class="fas fa-plus mr-2"></i>
                            New Meeting
                        </button>
                    </a>
                    <a href="{{ path('app_meeting_index') }}" class="inline-block">
                        <button class="border-2 border-white text-white hover:bg-white hover:text-purple-600 px-8 py-4 rounded-lg font-semibold text-lg text-center transition duration-300">
                            <i class="fas fa-calendar mr-2"></i>
                            My Meetings
                        </button>
                    </a>
                    <a href="{{ path('app_meeting_index') }}" class="inline-block">
                        <button class="border-2 border-white text-white hover:bg-white hover:text-purple-600 px-8 py-4 rounded-lg font-semibold text-lg text-center transition duration-300">
                            <i class="fas fa-video mr-2"></i>
                            Join Meeting
                        </button>
                    </a>
                </div>
            </div>
            <div class="lg:w-1/2">
                <div class="relative">
                    <div class="bg-white rounded-2xl p-6 shadow-2xl">
                        <div class="bg-gray-800 rounded-lg p-1 mb-4">
                            <div class="flex space-x-2 mb-2">
                                <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                                <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                            </div>
                            <div class="bg-gray-900 rounded p-4 h-64 flex items-center justify-center">
                                <div class="text-center">
                                    <i class="fas fa-video text-4xl text-purple-500 mb-4"></i>
                                    <p class="text-white font-semibold">Your Meeting Room</p>
                                    <p class="text-gray-400 text-sm">Start a meeting to begin</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Floating elements -->
                    <div class="absolute -top-4 -right-4 bg-green-500 text-white px-4 py-2 rounded-lg shadow-lg">
                        <i class="fas fa-bolt mr-1"></i>
                        Ready
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Quick Stats Section -->
<section class="py-16 bg-white">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-800 mb-4">Your Overview</h2>
            <p class="text-xl text-gray-600">Quick glance at your meeting activity</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
            <!-- Stat 1 - Total Meetings -->
            <div class="bg-gradient-to-r from-purple-500 to-purple-600 text-white rounded-2xl p-6 card-hover text-center">
                <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-video text-2xl"></i>
                </div>
                <h3 class="text-3xl font-bold mb-2">{{ meetings|length }}</h3>
                <p class="text-purple-100">Total Meetings</p>
            </div>

            <!-- Stat 2 - Ongoing Meetings -->
            <div class="bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-2xl p-6 card-hover text-center">
                <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-play-circle text-2xl"></i>
                </div>
                <h3 class="text-3xl font-bold mb-2">{{ ongoing_meetings|length }}</h3>
                <p class="text-blue-100">Ongoing Now</p>
            </div>

            <!-- Stat 3 - Upcoming Meetings -->
            <div class="bg-gradient-to-r from-green-500 to-green-600 text-white rounded-2xl p-6 card-hover text-center">
                <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-clock text-2xl"></i>
                </div>
                <h3 class="text-3xl font-bold mb-2">{{ upcoming_meetings|length }}</h3>
                <p class="text-green-100">Upcoming</p>
            </div>

            <!-- Stat 4 - Total Participants -->
            <div class="bg-gradient-to-r from-orange-500 to-orange-600 text-white rounded-2xl p-6 card-hover text-center">
                <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-users text-2xl"></i>
                </div>
                <h3 class="text-3xl font-bold mb-2">{{ total_participants }}</h3>
                <p class="text-orange-100">Total Participants</p>
            </div>
        </div>
    </div>
</section>

<!-- Quick Actions Section -->
<section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-800 mb-4">Quick Actions</h2>
            <p class="text-xl text-gray-600">Everything you need, right at your fingertips</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Action 1 - Instant Meeting -->
            <div class="bg-white rounded-2xl p-8 card-hover text-center border-2 border-purple-100">
                <div class="w-20 h-20 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-bolt text-purple-600 text-3xl"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-800 mb-4">Instant Meeting</h3>
                <p class="text-gray-600 mb-6">
                    Start a new meeting immediately and invite participants
                </p>
                <a href="{{ path('app_meeting_new') }}" class="block w-full bg-purple-600 hover:bg-purple-700 text-white py-3 rounded-lg font-semibold transition duration-300">
                    Start Now
                </a>
            </div>

            <!-- Action 2 - Schedule Meeting -->
            <div class="bg-white rounded-2xl p-8 card-hover text-center border-2 border-blue-100">
                <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-calendar-plus text-blue-600 text-3xl"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-800 mb-4">Schedule</h3>
                <p class="text-gray-600 mb-6">
                    Plan ahead and schedule meetings for later
                </p>
                <a href="{{ path('app_meeting_new') }}" class="block w-full bg-blue-600 hover:bg-blue-700 text-white py-3 rounded-lg font-semibold transition duration-300">
                    Schedule
                </a>
            </div>

            <!-- Action 3 - My Meetings -->
            <div class="bg-white rounded-2xl p-8 card-hover text-center border-2 border-green-100">
                <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-list text-green-600 text-3xl"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-800 mb-4">My Meetings</h3>
                <p class="text-gray-600 mb-6">
                    View and manage all your scheduled meetings
                </p>
                <a href="{{ path('app_meeting_index') }}" class="block w-full bg-green-600 hover:bg-green-700 text-white py-3 rounded-lg font-semibold transition duration-300">
                    View All
                </a>
            </div>

            <!-- Action 4 - Settings -->
            <div class="bg-white rounded-2xl p-8 card-hover text-center border-2 border-orange-100">
                <div class="w-20 h-20 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-cog text-orange-600 text-3xl"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-800 mb-4">Settings</h3>
                <p class="text-gray-600 mb-6">
                    Customize your audio, video, and meeting preferences
                </p>
                <a href="{{ path('app_settings') }}" class="block w-full bg-orange-600 hover:bg-orange-700 text-white py-3 rounded-lg font-semibold transition duration-300">
                    Configure
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Upcoming Meetings Section -->
<section class="py-16 bg-white">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-800 mb-4">Upcoming Meetings</h2>
            <p class="text-xl text-gray-600">Your scheduled meetings and events</p>
        </div>

        {% if upcoming_meetings|length > 0 %}
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Today's Meetings -->
            <div class="bg-gradient-to-br from-purple-50 to-blue-50 rounded-2xl p-8">
                <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
                    <i class="fas fa-sun text-yellow-500 mr-3"></i>
                    Today's Schedule
                </h3>
                
                <div class="space-y-4">
                    {% for meeting in upcoming_meetings|slice(0, 3) %}
                    <div class="bg-white rounded-xl p-4 shadow-md border-l-4 border-purple-500">
                        <div class="flex justify-between items-start">
                            <div>
                                <h4 class="font-semibold text-gray-800">{{ meeting.title }}</h4>
                                <p class="text-gray-600 text-sm">{{ meeting.description ?: 'No description' }}</p>
                            </div>
                            <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-sm font-medium">
                                {{ meeting.scheduledAt|date('g:i A') }}
                            </span>
                        </div>
                        <div class="flex items-center justify-between mt-2 text-sm text-gray-500">
                            <div class="flex items-center">
                                <i class="fas fa-users mr-2"></i>
                                <span>{{ meeting.participants|length }} participants</span>
                            </div>
                            <div class="flex space-x-2">
                                {% if meeting.host == app.user %}
                                    <form method="post" action="{{ path('app_meeting_start', {'id': meeting.id}) }}">
                                        <button type="submit" class="bg-purple-600 hover:bg-purple-700 text-white px-3 py-1 rounded text-xs">
                                            Start
                                        </button>
                                    </form>
                                {% else %}
                                    <form method="post" action="{{ path('app_meeting_join', {'id': meeting.id}) }}">
                                        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-xs">
                                            Join
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <!-- This Week -->
            <div class="bg-gradient-to-br from-green-50 to-teal-50 rounded-2xl p-8">
                <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
                    <i class="fas fa-calendar-week text-green-500 mr-3"></i>
                    This Week
                </h3>
                
                <div class="space-y-4">
                    {% for meeting in upcoming_meetings|slice(3, 3) %}
                    <div class="bg-white rounded-xl p-4 shadow-md border-l-4 border-green-500">
                        <div class="flex justify-between items-start">
                            <div>
                                <h4 class="font-semibold text-gray-800">{{ meeting.title }}</h4>
                                <p class="text-gray-600 text-sm">{{ meeting.description ?: 'No description' }}</p>
                            </div>
                            <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-sm font-medium">
                                {{ meeting.scheduledAt|date('D, g:i A') }}
                            </span>
                        </div>
                        <div class="flex items-center justify-between mt-2 text-sm text-gray-500">
                            <div class="flex items-center">
                                <i class="fas fa-users mr-2"></i>
                                <span>{{ meeting.participants|length }} participants</span>
                            </div>
                            <a href="{{ path('app_meeting_show', {'id': meeting.id}) }}" class="text-blue-600 hover:text-blue-800 text-xs">
                                Details
                            </a>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% else %}
        <div class="text-center py-12">
            <i class="fas fa-calendar-times text-gray-300 text-6xl mb-4"></i>
            <h3 class="text-2xl font-medium text-gray-900 mb-2">No upcoming meetings</h3>
            <p class="text-gray-500 mb-6">Schedule your first meeting to get started!</p>
            <a href="{{ path('app_meeting_new') }}" class="btn-primary">
                <i class="fas fa-plus mr-2"></i>
                Schedule Meeting
            </a>
        </div>
        {% endif %}
    </div>
</section>

<!-- Recent Meetings Section -->
<section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-800 mb-4">Recent Meetings</h2>
            <p class="text-xl text-gray-600">Your latest meetings and interactions</p>
        </div>

        {% if recent_meetings|length > 0 %}
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full">
                    <thead class="gradient-bg text-white">
                        <tr>
                            <th class="py-4 px-6 text-left">Meeting</th>
                            <th class="py-4 px-6 text-left">Date & Time</th>
                            <th class="py-4 px-6 text-left">Duration</th>
                            <th class="py-4 px-6 text-left">Participants</th>
                            <th class="py-4 px-6 text-left">Status</th>
                            <th class="py-4 px-6 text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        {% for meeting in recent_meetings %}
                        <tr class="hover:bg-gray-50 transition duration-300">
                            <td class="py-4 px-6">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
                                        <i class="fas fa-video text-purple-600"></i>
                                    </div>
                                    <div>
                                        <p class="font-semibold text-gray-800">{{ meeting.title }}</p>
                                        <p class="text-sm text-gray-500">{{ meeting.description ?: 'No description' }}</p>
                                    </div>
                                </div>
                            </td>
                            <td class="py-4 px-6">
                                <p class="text-gray-800">
                                    {% if meeting.scheduledAt %}
                                        {{ meeting.scheduledAt|date('M j, Y g:i A') }}
                                    {% else %}
                                        Instant Meeting
                                    {% endif %}
                                </p>
                            </td>
                            <td class="py-4 px-6">
                                <p class="text-gray-600">{{ meeting.duration }} min</p>
                            </td>
                            <td class="py-4 px-6">
                                <div class="flex -space-x-2">
                                    {% for participant in meeting.participants|slice(0, 3) %}
                                    <div class="w-8 h-8 bg-blue-500 rounded-full border-2 border-white flex items-center justify-center text-xs text-white" title="{{ participant.name }}">
                                        {{ participant.name|first|upper }}
                                    </div>
                                    {% endfor %}
                                    {% if meeting.participants|length > 3 %}
                                    <div class="w-8 h-8 bg-gray-400 rounded-full border-2 border-white flex items-center justify-center text-xs text-white">
                                        +{{ meeting.participants|length - 3 }}
                                    </div>
                                    {% endif %}
                                </div>
                            </td>
                            <td class="py-4 px-6">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                    {% if meeting.status == 'ongoing' %}bg-green-100 text-green-800
                                    {% elseif meeting.status == 'scheduled' %}bg-yellow-100 text-yellow-800
                                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                                    {{ meeting.status|title }}
                                </span>
                            </td>
                            <td class="py-4 px-6">
                                <div class="flex justify-center space-x-2">
                                    {% if meeting.status == 'ongoing' %}
                                        <a href="{{ path('app_meeting_room', {'id': meeting.id}) }}" class="bg-green-500 hover:bg-green-600 text-white p-2 rounded-lg transition duration-300" title="Join Meeting">
                                            <i class="fas fa-play"></i>
                                        </a>
                                    {% endif %}
                                    <a href="{{ path('app_meeting_show', {'id': meeting.id}) }}" class="bg-blue-500 hover:bg-blue-600 text-white p-2 rounded-lg transition duration-300" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% else %}
        <div class="text-center py-12">
            <i class="fas fa-video-slash text-gray-300 text-6xl mb-4"></i>
            <h3 class="text-2xl font-medium text-gray-900 mb-2">No recent meetings</h3>
            <p class="text-gray-500 mb-6">Create your first meeting to get started!</p>
            <a href="{{ path('app_meeting_new') }}" class="btn-primary">
                <i class="fas fa-plus mr-2"></i>
                Create Meeting
            </a>
        </div>
        {% endif %}
    </div>
</section>

<style>
.btn-primary {
    @apply inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition duration-300;
}

.gradient-bg {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.card-hover {
    transition: all 0.3s ease;
}
.card-hover:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
}
</style>
{% endblock %}