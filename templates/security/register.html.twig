{% extends 'base.html.twig' %}

{% block title %}Register - UniMeet{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">
            <i class="fas fa-user-plus text-purple-600 mr-3"></i>
            Join UniMeet
        </h1>
        <p class="text-gray-600">Create your UniMeet account</p>
    </div>

    <!-- Check which form variable exists -->
    {% if registrationForm is defined %}
        {% set form = registrationForm %}
    {% endif %}

    {% if form is defined %}
    <!-- Form Card -->
    <div class="bg-white rounded-2xl shadow-xl card-hover overflow-hidden">
        <div class="gradient-bg py-6 px-8">
            <h2 class="text-2xl font-bold text-white">Account Information</h2>
        </div>
        
        <div class="p-8">
            {{ form_start(form) }}
            <div class="space-y-6">
                <!-- Name Field -->
                <div>
                    {{ form_label(form.name, 'Full Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    <div class="relative">
                        {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-300 pl-12', 'placeholder': 'Enter your full name'}}) }}
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-user text-gray-400"></i>
                        </div>
                    </div>
                    {{ form_errors(form.name) }}
                </div>

                <!-- Email Field -->
                <div>
                    {{ form_label(form.email, 'Email Address', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    <div class="relative">
                        {{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-300 pl-12', 'placeholder': 'Enter your email address'}}) }}
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-envelope text-gray-400"></i>
                        </div>
                    </div>
                    {{ form_errors(form.email) }}
                </div>

                <!-- Password Field -->
                <div>
                    {{ form_label(form.plainPassword, 'Password', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    <div class="relative">
                        {{ form_widget(form.plainPassword, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-300 pl-12', 'placeholder': 'Create a password'}}) }}
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-lock text-gray-400"></i>
                        </div>
                    </div>
                    {{ form_errors(form.plainPassword) }}
                </div>

                <!-- Role Selection -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-4">Account Type</label>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <!-- Student Role -->
                        <div class="relative">
                            <input type="radio" name="role" value="ROLE_STUDENT" id="role_student" class="hidden peer" checked>
                            <label for="role_student" class="flex flex-col items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer transition-all duration-300 peer-checked:border-purple-500 peer-checked:bg-purple-50 hover:border-purple-300">
                                <i class="fas fa-graduation-cap text-2xl text-purple-600 mb-2"></i>
                                <span class="font-semibold text-gray-800">Student</span>
                                <span class="text-sm text-gray-600 text-center mt-1">I want to learn and join courses</span>
                            </label>
                        </div>

                        <!-- Teacher Role -->
                        <div class="relative">
                            <input type="radio" name="role" value="ROLE_TEACHER" id="role_teacher" class="hidden peer">
                            <label for="role_teacher" class="flex flex-col items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer transition-all duration-300 peer-checked:border-purple-500 peer-checked:bg-purple-50 hover:border-purple-300">
                                <i class="fas fa-chalkboard-teacher text-2xl text-purple-600 mb-2"></i>
                                <span class="font-semibold text-gray-800">Teacher</span>
                                <span class="text-sm text-gray-600 text-center mt-1">I want to create and teach courses</span>
                            </label>
                        </div>

                        <!-- Admin Role -->
                        <div class="relative">
                            <input type="radio" name="role" value="ROLE_ADMIN" id="role_admin" class="hidden peer">
                            <label for="role_admin" class="flex flex-col items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer transition-all duration-300 peer-checked:border-purple-500 peer-checked:bg-purple-50 hover:border-purple-300">
                                <i class="fas fa-cog text-2xl text-purple-600 mb-2"></i>
                                <span class="font-semibold text-gray-800">Admin</span>
                                <span class="text-sm text-gray-600 text-center mt-1">I want to manage the platform</span>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Agree Terms Field -->
                <div class="flex items-start space-x-3 bg-gray-50 p-4 rounded-lg">
                    {{ form_widget(form.agreeTerms, {'attr': {'class': 'w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 focus:ring-2 mt-1'}}) }}
                    <div>
                        {{ form_label(form.agreeTerms, 'I agree to the terms and conditions', {'label_attr': {'class': 'text-sm text-gray-700 cursor-pointer'}}) }}
                        {{ form_errors(form.agreeTerms) }}
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="pt-6">
                    <button type="submit" class="w-full flex items-center justify-center space-x-2 btn-primary text-white py-4 px-6 rounded-lg text-lg font-semibold transition duration-300 transform hover:scale-105">
                        <i class="fas fa-user-plus"></i>
                        <span>Create Account</span>
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    {% else %}
    <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded">
        <p>No form available. Please check your controller.</p>
        <p>Available variables: {{ _context|keys|join(', ') }}</p>
    </div>
    {% endif %}

    <!-- Login Link -->
    <div class="text-center mt-8">
        <p class="text-gray-600">
            Already have an account?
            <a href="{{ path('app_login') }}" class="text-purple-600 hover:text-purple-700 font-semibold transition duration-300">
                Sign in here
            </a>
        </p>
    </div>
</div>

<!-- Custom Styles -->
<style>
    .card-hover {
        transition: all 0.3s ease;
    }
    .card-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
    }
    .gradient-bg {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        transition: all 0.3s ease;
    }
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }
    
    /* Role selection styles */
    .role-option {
        transition: all 0.3s ease;
    }
    .role-option:hover {
        transform: translateY(-2px);
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const roleInputs = document.querySelectorAll('input[name="role"]');
    const hiddenRoleField = document.querySelector('#registration_form_roles');
    
    roleInputs.forEach(input => {
        input.addEventListener('change', function() {
            // Update the hidden form field
            hiddenRoleField.value = this.value;
            console.log('Selected role:', this.value);
        });
    });
    
    // Set default role
    if (hiddenRoleField) {
        hiddenRoleField.value = 'ROLE_STUDENT';
    }
});
</script>
{% endblock %}